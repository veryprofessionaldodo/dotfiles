<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">10001</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>1920</width>
			<height>1080</height>
			<texture>common/black.png</texture>
		</control>
		<control type="image">
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>80</width>
			<height>80</height>
			<aspectratio>keep</aspectratio>
			<animation effect="rotate" end="-45" center="auto" time="200" delay="200" loop="true" reversible="false" condition="true">Conditional</animation>
			<texture colordiffuse="$INFO[Window(home).Property(ImageColor)]">common/spinner.png</texture>
		</control>
		<control type="image">
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>50</width>
			<height>50</height>
			<aspectratio>keep</aspectratio>
			<animation effect="rotate" end="45" center="auto" time="200" delay="200" loop="true" reversible="false" condition="true">Conditional</animation>
			<texture flipx="true" colordiffuse="$INFO[Window(home).Property(ImageColor)]">common/spinner.png</texture>
		</control>
		<control type="list" id="10001">
			<left>-90</left>
			<top>0</top>
			<width>2100</width>
			<height>1080</height>
			<onleft>10001</onleft>
			<onright>10001</onright>
			<ondown>9001</ondown>
			<scrolltime tween="sine">400</scrolltime>
			<orientation>Horizontal</orientation>
			<itemlayout height="1080" width="1920">
				<control type="image">
					<left>90</left>
					<top>0</top>
					<width>1920</width>
					<height>1080</height>
					<aspectratio>keep</aspectratio>
					<texture>$INFO[ListItem.Property(Original)]</texture>
				</control>
			</itemlayout>
			<focusedlayout height="1080" width="1920">
				<control type="image">
					<left>90</left>
					<top>0</top>
					<width>1920</width>
					<height>1080</height>
					<aspectratio>keep</aspectratio>
					<texture>$INFO[ListItem.Property(Original)]</texture>
				</control>
			</focusedlayout>
		</control>
	</controls>
</window>