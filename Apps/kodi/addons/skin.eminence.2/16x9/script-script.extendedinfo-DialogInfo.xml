<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window>
    <defaultcontrol always="true">9000</defaultcontrol>

    <onload>SetProperty(150_onback,SetFocus(9000))</onload>
    <onload>SetProperty(250_onback,SetFocus(9000))</onload>
    <onload>SetProperty(350_onback,SetFocus(9000))</onload>
    <onload>SetProperty(550_onback,SetFocus(9000))</onload>
    <onload>ClearProperty(content)</onload>
    <onload>SetProperty(extinfo,2,home)</onload>
    <onload>Dialog.Close(2003)</onload>
    <controls>
        <control type="group">
            <include>Defs_InfoBackground</include>
            <include content="Object_Headline">
                <param name="label" value="$VAR[Label_ExtendedInfo_InfoLine]" />
            </include>
            <control type="group">
                <left>bigpad</left>
                <right>bigpad</right>
                <top>bigpad</top>
                <bottom>bigpad</bottom>

                <include content="Object_Poster">
                    <param name="flipx" value="false" />
                    <param name="width" value="posterw" />
                </include>
                <control type="group">
                    <left>500</left>
                    <right>0</right>
                    <include>Object_Background</include>

                    <!-- INFO -->
                    <control type="grouplist">
                        <visible>ControlGroup(9000).HasFocus()</visible>
                        <usecontrolcoords>true</usecontrolcoords>
                        <itemgap>pad</itemgap>
                        <orientation>vertical</orientation>
                        <left>pad</left>
                        <right>pad</right>
                        <top>pad</top>
                        <bottom>pad</bottom>
                        <control type="label">
                            <top>pad</top>
                            <left>pad</left>
                            <right>pad</right>
                            <height>36</height>
                            <font>Font-InfoBox-Title</font>
                            <label>$INFO[Window.Property(label)]</label>
                        </control>
                        <control type="label">
                            <left>pad</left>
                            <right>pad</right>
                            <height>32</height>
                            <font>Font-ListInfo-Small-Bold</font>
                            <label>[UPPERCASE][COLOR=$VAR[HighlightColor2]]$INFO[Window.Property(AlsoKnownAs)][/COLOR][/UPPERCASE]</label>
                        </control>
                        <control type="textbox">
                            <top>pad</top>
                            <left>pad</left>
                            <right>pad</right>
                            <height max="266">auto</height>
                            <font>Font-ListInfo</font>
                            <align>left</align>
                            <label>$INFO[Window.Property(Biography)]</label>
                        </control>
                        <control type="group">
                            <left>pad</left>
                            <right>pad</right>
                            <top>-10</top>
                            <control type="grouplist">
                                <include>Info_DetailsGrouplist</include>


                                <!-- Place of Birth -->
                                <control type="group">
                                    <height>36</height>
                                    <width>100%</width>
                                    <visible>!String.IsEmpty(Window.Property(PlaceOfBirth))</visible>
                                    <control type="label">
                                        <width>200</width>
                                        <height>36</height>
                                        <align>left</align>
                                        <font>Font-ListInfo-Small</font>
                                        <textcolor>ListLabel</textcolor>
                                        <label>$ADDON[script.extendedinfo 32014]</label>
                                        <textcolor>ListLabel</textcolor>
                                    </control>
                                    <control type="label">
                                        <left>220</left>
                                        <align>left</align>
                                        <height>36</height>
                                        <font>Font-ListInfo-Bold</font>
                                        <label>$INFO[Window.Property(PlaceOfBirth)]</label>
                                        <textcolor>SubLabel</textcolor>
                                    </control>
                                </control>
                            </control>
                        </control>
                    </control>
                    <control type="grouplist">
                        <visible>ControlGroup(9000).HasFocus()</visible>
                        <bottom>74</bottom>
                        <left>-20</left>
                        <right>-20</right>
                        <height>128</height>
                        <itemgap>20</itemgap>
                        <align>center</align>
                        <orientation>horizontal</orientation>
                        <control type="group">
                            <visible>!String.IsEmpty(Window.Property(Birthday))</visible>
                            <width>370</width>
                            <height>100%</height>
                            <control type="label">
                                <top>0</top>
                                <height>32</height>
                                <align>center</align>
                                <font>Font-ListInfo-Small</font>
                                <label>$ADDON[script.extendedinfo 32012]</label>
                            </control>
                            <control type="label">
                                <top>32</top>
                                <height>48</height>
                                <align>center</align>
                                <textcolor>SubLabel</textcolor>
                                <font>Font-InfoBox-Title</font>
                                <label>$INFO[Window.Property(Birthday)]</label>
                            </control>
                        </control>
                        <control type="group">
                            <width>370</width>
                            <height>100%</height>
                            <visible>!String.IsEmpty(Window.Property(DeathDay))</visible>
                            <control type="label">
                                <top>0</top>
                                <height>32</height>
                                <align>center</align>
                                <font>Font-ListInfo-Small</font>
                                <label>$ADDON[script.extendedinfo 32013]</label>
                            </control>
                            <control type="label">
                                <top>32</top>
                                <height>48</height>
                                <align>center</align>
                                <textcolor>SubLabel</textcolor>
                                <font>Font-InfoBox-Title</font>
                                <label>$INFO[Window.Property(DeathDay)]</label>
                            </control>
                        </control>
                        <control type="group">
                            <width>370</width>
                            <height>100%</height>
                            <visible>!String.IsEmpty(Window.Property(Age))</visible>
                            <control type="label">
                                <top>0</top>
                                <height>32</height>
                                <align>center</align>
                                <font>Font-ListInfo-Small</font>
                                <label>$ADDON[script.extendedinfo 32020]</label>
                            </control>
                            <control type="label">
                                <top>32</top>
                                <height>48</height>
                                <align>center</align>
                                <textcolor>SubLabel</textcolor>
                                <font>Font-InfoBox-Title</font>
                                <label>$INFO[Window.Property(Age)]</label>
                            </control>
                        </control>

                    </control>
                    <!-- BUTTONS -->
                    <control type="grouplist" id="9000">
                        <visible allowhiddenfocus="true">ControlGroup(9000).HasFocus()</visible>
                        <left>pad</left>
                        <width>100%</width>
                        <bottom>30</bottom>
                        <height>64</height>
                        <align>center</align>
                        <itemgap>pad</itemgap>
                        <onright>noop</onright>
                        <orientation>horizontal</orientation>
                        <usecontrolcoords>true</usecontrolcoords>
                        <onup>9601</onup>

                        <control type="button" id="9999">
                            <visible allowhiddenfocus="true">false</visible>
                            <onback>SetProperty(extinfo,1,home)</onback>
                            <onfocus>Right</onfocus>
                            <onclick>Right</onclick>
                            <ondown>Right</ondown>
                            <onup>Right</onup>
                            <onleft>Right</onleft>
                        </control>

                        <!-- Movies -->
                        <control type="button" id="9001">
                            <onback>SetProperty(extinfo,1,home)</onback>
                            <label>$ADDON[script.extendedinfo 32010]</label>
                            <onclick>SetProperty(content,150)</onclick>
                            <onclick>SetFocus(150)</onclick>
                            <font>Font-ListInfo-Small-Bold</font>
                            <onfocus>ClearProperty(content)</onfocus>
                            <include>Defs_OptionButton3</include>
                            <enable>Integer.IsGreater(Container(150).NumItems,0)</enable>
                        </control>
                        
                        <!-- TvShows -->
                        <control type="button" id="9002">
                            <onback>SetProperty(extinfo,1,home)</onback>
                            <label>20343</label>
                            <onclick>SetProperty(content,250)</onclick>
                            <onclick>SetFocus(250)</onclick>
                            <font>Font-ListInfo-Small-Bold</font>
                            <onfocus>ClearProperty(content)</onfocus>
                            <include>Defs_OptionButton3</include>
                            <enable>Integer.IsGreater(Container(250).NumItems,0)</enable>
                        </control>

                        <!-- YouTube -->
                        <control type="button" id="9003">
                            <onback>SetProperty(extinfo,1,home)</onback>
                            <label>$ADDON[script.extendedinfo 32118]</label>
                            <onclick>SetProperty(content,350)</onclick>
                            <onclick>SetFocus(350)</onclick>
                            <font>Font-ListInfo-Small-Bold</font>
                            <onfocus>ClearProperty(content)</onfocus>
                            <include>Defs_OptionButton3</include>
                            <enable>Integer.IsGreater(Container(350).NumItems,0)</enable>
                        </control>

                        <!-- As Crew -->
                        <control type="button" id="9004">
                            <onback>SetProperty(extinfo,1,home)</onback>
                            <label>$ADDON[script.extendedinfo 32115]</label>
                            <onclick>SetProperty(content,550)</onclick>
                            <onclick>SetFocus(550)</onclick>
                            <font>Font-ListInfo-Small-Bold</font>
                            <onfocus>ClearProperty(content)</onfocus>
                            <include>Defs_OptionButton3</include>
                            <enable>Integer.IsGreater(Container(550).NumItems,0)</enable>
                        </control>

                        <control type="button" id="9998">
                            <visible allowhiddenfocus="true">false</visible>
                            <onback>SetProperty(extinfo,1,home)</onback>
                            <onfocus>Left</onfocus>
                            <onclick>Left</onclick>
                            <ondown>Left</ondown>
                            <onup>Left</onup>
                            <onleft>Left</onleft>
                        </control>
                    </control>
                </control>

            </control>
            <include content="Dialog_ImageList">
                <param name="id" value="150" />
                <param name="type" value="list" />
                <param name="moveid" value="ClearProperty(content)" />
                <param name="moveid2" value="SetFocus(9000)" />
                <param name="left" value="520" />
                <param name="width" value="listw" />
                <param name="top" value="bigpad" />
                <param name="pad" value="pad" />
                <param name="bottom" value="20" />
                <param name="backpanel" value="false" />
                <param name="visible" value="Control.HasFocus(150)" />
            </include>
            <include content="Dialog_ImageList">
                <param name="id" value="250" />
                <param name="type" value="list" />
                <param name="moveid" value="ClearProperty(content)" />
                <param name="moveid2" value="SetFocus(9000)" />
                <param name="left" value="520" />
                <param name="width" value="listw" />
                <param name="top" value="bigpad" />
                <param name="pad" value="pad" />
                <param name="bottom" value="20" />
                <param name="backpanel" value="false" />
                <param name="visible" value="Control.HasFocus(250)" />
            </include>
