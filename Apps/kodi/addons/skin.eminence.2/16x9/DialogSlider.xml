<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- sliderdialog -->
	<defaultcontrol always="true">11</defaultcontrol>

	<controls>

		<!-- Hidden labels passed to Info below -->
		<control type="label" id="10">
			<font />
		</control>
		<control type="label" id="12">
			<font />
		</control>

		<control type="group">
			<centerleft>50%</centerleft>
			<top>0</top>
			<width>800</width>
			<height>180</height>
			<include>Animation_SlideIn</include>
            <include>Animation_FadeOut</include>
            <include>Dialog_Background</include>

			<!-- Info -->
			<control type="label">
				<left>40</left>
				<top>30</top>
				<width>720</width>
				<height>33</height>
				<align>center</align>
				<scroll>true</scroll>
				<label>$INFO[Control.GetLabel(10)] - $INFO[Control.GetLabel(12)]</label>
			</control>

			<!-- Slider -->
			<control type="slider" id="11">
				<left>40</left>
				<top>104</top>
				<width>720</width>
				<height>20</height>
                <texturesliderbar>common/slider_bg_2.png</texturesliderbar>
			</control>

		</control>

	</controls>

</window>
