<?xml version="1.0" encoding="utf-8"?>
<window>
    <backgroundcolor>Background</backgroundcolor>

    <controls>
        <include>Furniture_Background</include>
        <include>Furniture_TopBar</include>
        <include>Furniture_RSS</include>
        <!-- Settings -->
        <control type="group">
            <include condition="Window.Previous(Settings.xml) | Window.Previous(SettingsCategory.xml) | Window.Previous(SkinSettings.xml)">Defs_SettingsScreen</include>
        </control>
        <control type="group">
            <include>Animation_FadeIn</include>
            <include>Animation_FadeOut</include>
            <include>GlobalOverlay</include>
        </control>
        <!-- Main -->
        <control type="group">
            <include>Animation_SlideIn</include>
            <include>Animation_FadeOut</include>
            <include>Defs_ViewBackground</include>
            
            <control type="group">
                <left>bigpad</left>
                <right>bigpad</right>
                <top>-8</top>
                <bottom>bigpad</bottom>
                <include>Dialog_Background</include>
                <include content="Dialog_Top_IconHeader">
                    <param name="label" value="$VAR[Label_SettingsHeader,, $LOCALIZE[5]]" />
                    <param name="icon" value="$VAR[Image_SettingsHeader]" />
                </include>
                <!-- Main List -->
                <control type="group">
                    <left>bigpad</left>
                    <top>80</top>
                    <bottom>bigpad</bottom>
                    <width>465</width>
                    <include>Object_FlatBackground</include>
                    
                    <control type="grouplist" id="3">
                        <top>0</top>
                        <bottom>72</bottom>
                        <itemgap>0</itemgap>
                        <onleft>20</onleft>
                        <onup>noop</onup>
                        <ondown>20</ondown>
                        <onright>5</onright>
                        <ondown>noop</ondown>
                    </control>
                    
                    <control type="button" id="20">
                        <bottom>0</bottom>
                        <width>100%</width>
                        <height>72</height>
                        <onright>3</onright>
                        <onup>3</onup>
                        <textoffsetx>80</textoffsetx>
                        <font>Font-SettingsLevel</font>
                        <onclick>settingslevelchange</onclick>
                        <include>Defs_OptionButton</include>
                    </control>
                    <control type="image">
                        <bottom>0</bottom>
                        <left>0</left>
                        <width>72</width>
                        <height>72</height>
                        <visible>!Control.Hasfocus(20)</visible>
                        <texture colordiffuse="ListLabel">special://skin/extras/icons/settings.png</texture>
                    </control>
                    <control type="image">
                        <bottom>0</bottom>
                        <left>0</left>
                        <width>72</width>
                        <height>72</height>
                        <visible>Control.Hasfocus(20)</visible>
                        <texture colordiffuse="Selected">special://skin/extras/icons/settings.png</texture>
                    </control>
                </control>

                <!-- Sub List -->
                <control type="group">
                    <left>505</left>
                    <top>80</top>
                    <bottom>92</bottom>
                    <right>bigpad</right>
                    <include>Object_FlatBackground</include>
                    <control type="grouplist" id="5">
                        <itemgap>0</itemgap>
                        <onleft>3</onleft>
                    </control>
                </control>

                <!-- Text Box RSS -->
                <control type="group">
                    <bottom>bigpad</bottom>
                    <left>504</left>
                    <right>bigpad</right>
                    <height>62</height>
                    <control type="textbox">
                        <aligny>center</aligny>
                        <font>Font-RSS</font>
                        <label>$INFO[Control.GetLabel(6)]</label>
                        <textcolor>LineLabel</textcolor>
                        <autoscroll delay="2000" time="4000" repeat="3000">True</autoscroll>
                    </control>
                    <control type="label" id="6"><visible>false</visible></control>
                </control>
            </control>
            <!-- Arrows -->
        <control type="group">
            <control type="image">
                <top>-35</top>
                <centerleft>50%</centerleft>
                <width>16</width>
                <height>16</height>
                <texture colordiffuse="SubLabel" flipy="true">common/16-arrow-down.png</texture>
                <visible>Container(5).HasPrevious</visible>
            </control>
            <control type="image">
                <bottom>-10</bottom>
                <centerleft>50%</centerleft>
                <width>16</width>
                <height>16</height>
                <texture colordiffuse="SubLabel" flipy="false">common/16-arrow-down.png</texture>
                <visible>Container(5).HasNext</visible>
            </control>
        </control>
        </control>

        
        

        <!-- Category Template -->
        <control type="button" id="10">
            <width>100%</width>
            <height>72</height>
            <include>Defs_OptionButton</include>
        </control>

        <!-- Default Templates -->
        <control type="button" id="7">
            <width>100%</width>
            <height>72</height>
            <include>Defs_OptionButton</include>
        </control>
        <control type="radiobutton" id="8">
            <width>100%</width>
            <height>72</height>
            <radioposx>settingsradioposx</radioposx>
            <include>Defs_OptionButton</include>
        </control>
        <control type="spincontrolex" id="9">
            <width>100%</width>
            <height>72</height>
            <include>Defs_OptionButton</include>
        </control>
        <control type="label" id="14">
            <width>100%</width>
            <height>72</height>
            <align>left</align>
            <font>Font-ListInfo-Small-Bold</font>
            <include>Defs_OptionButton</include>
        </control>
        <control type="image" id="11">
            <width>100%</width>
            <height>72</height>
            <texture border="30">common/div.png</texture>
            <include>Defs_OptionButton</include>
        </control>
        <control type="edit" id="12">
            <width>100%</width>
            <height>72</height>
            <include>Defs_OptionButton</include>
        </control>
        <control type="sliderex" id="13">
            <width>100%</width>
            <height>72</height>
            <include>Defs_OptionButton</include>
        </control>

    </controls>

</window>