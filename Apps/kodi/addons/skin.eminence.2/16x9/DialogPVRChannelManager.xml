<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">9000</defaultcontrol>
    <controls>
        <control type="group">
            <top>dialogtop</top>
            <bottom>60</bottom>
            <left>sidepad</left>
            <right>sidepad</right>
            <include>Animation_SlideIn</include>
            <include>Animation_FadeOut</include>
            <animation effect="slide" tween="quadratic" easing="out" time="300" start="0,1920" end="0">WindowOpen</animation>
            <animation effect="slide" tween="quadratic" easing="in" time="300" end="0,1920" start="0">WindowClose</animation>
            <include>Dialog_Background</include>
            <control type="group">
                <top>70</top>
                <left>bigpad</left>
                <right>bigpad</right>
                <height>posterh</height>
                <include content="Object_Line">
                    <param name="width" value="headlinew" />
                    <param name="label" value="$LOCALIZE[19199]" />
                </include>
                <control type="group">
                    <left>0</left>
                    <width>690</width>
                    <include>Object_FlatBackground</include>
                </control>
                <control type="list" id="20">
                    <scrolltime>200</scrolltime>
                    <orientation>vertical</orientation>
                    <preloaditems>2</preloaditems>
                    <onright>9000</onright>
                    <itemlayout width="690" height="144">

                        <control type="group">
                            <control type="image">
                                <top>pad</top>
                                <left>pad</left>
                                <width>124</width>
                                <height>124</height>
                                <aspectratio>keep</aspectratio>
                                <texture background="true">$INFO[ListItem.Icon]</texture>
                            </control>
                            <control type="group">
                                <left>148</left>
                                <right>30</right>
                                <control type="label">
                                    <width>100%</width>
                                    <top>0</top>
                                    <bottom>30%</bottom>
                                    <textcolor>ListLabel</textcolor>
                                    <font>Font-ListInfo-Small-Bold</font>
                                    <aligny>center</aligny>
                                    <label>$INFO[ListItem.Property(Number),(,) ]$INFO[ListItem.Property(Name)]</label>
                                </control>
                                <control type="label">
                                    <width>100%</width>
                                    <top>30%</top>
                                    <bottom>0</bottom>
                                    <textcolor>ListLabel</textcolor>
                                    <font>Font-ListInfo-Small</font>
                                    <aligny>center</aligny>
                                    <label>$LOCALIZE[19210]: $INFO[ListItem.Property(ClientName)]</label>
                                </control>
                            </control>
                        </control>
                    </itemlayout>
                    <focusedlayout width="690" height="144">
                        <control type="image">
                            <width>100%</width>
                            <height>100%</height>
                            <texture colordiffuse="$VAR[HighlightColor]">common/white.png</texture>
                            <animation effect="fade" start="100" end="50" condition="!Control.HasFocus(20)">Conditional</animation>
                        </control>
                        <control type="group">
                            <control type="image">
                                <top>pad</top>
                                <left>pad</left>
                                <width>124</width>
                                <height>124</height>
                                <aspectratio>keep</aspectratio>
                                <texture background="true">$INFO[ListItem.Icon]</texture>
                            </control>
                            <control type="group">
                                <left>148</left>
                                <right>30</right>
                                <control type="label">
                                    <width>100%</width>
                                    <top>0</top>
                                    <bottom>30%</bottom>
                                    <textcolor>Selected</textcolor>
                                    <font>Font-ListInfo-Small-Bold</font>
                                    <aligny>center</aligny>
                                    <label>$INFO[ListItem.Property(Number),(,) ]$INFO[ListItem.Property(Name)]</label>
                                </control>
                                <control type="label">
                                    <width>100%</width>
                                    <top>30%</top>
                                    <bottom>0</bottom>
                                    <textcolor>Selected</textcolor>
                                    <font>Font-ListInfo-Small</font>
                                    <aligny>center</aligny>
                                    <label>$LOCALIZE[19210]: $INFO[ListItem.Property(ClientName)]</label>
                                </control>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
                <control type="group">
                    <left>710</left>
                    <width>690</width>
                    <include>Object_FlatBackground</include>
                </control>
                <control type="grouplist" id="9000">
                    <left>710</left>
                    <width>690</width>
                    <itemgap>0</itemgap>
                    <onleft>20</onleft>
                    <onright>9100</onright>
                    <!-- Channel activated -->
                    <control type="radiobutton" id="7">
                        <radioposx>640</radioposx>
                        <width>690</width>
                        <include>Defs_OptionButton</include>
                        <label>19074</label>
                    </control>

                    <!-- Channel name -->
                    <control type="edit" id="8">
                        <width>690</width>
                        <include>Defs_OptionButton</include>
                        <textoffsetx>20</textoffsetx>
                        <textwidth>650</textwidth>
                        <label>19201</label>
                    </control>

                    <!-- Channel logo button -->
                    <control type="button" id="9">
                        <width>690</width>
                        <include>Defs_OptionButton</include>
                        <label>19202</label>
                    </control>

                    <!-- EPG activated -->
                    <control type="radiobutton" id="12">
                        <radioposx>640</radioposx>
                        <width>690</width>
                        <include>Defs_OptionButton</include>
                        <label>19074</label>
                    </control>

                    <!-- EPG source -->
                    <control type="spincontrolex" id="13">
                        <width>690</width>
                        <include>Defs_OptionButton</include>
                        <textwidth>650</textwidth>
                        <label>19200</label>
                    </control>

                    <!-- Parental locked -->
                    <control type="radiobutton" id="14">
                        <radioposx>640</radioposx>
                        <width>690</width>
                        <include>Defs_OptionButton</include>
                        <label>19267</label>
                    </control>

                    <!-- Edit channel button -->
                    <control type="button" id="31">
                        <width>690</width>
                        <include>Defs_OptionButton</include>
                        <label>19203</label>
                    </control>

                    <!-- Delete channel button -->
                    <control type="button" id="32">
                        <width>690</width>
                        <include>Defs_OptionButton</include>
                        <label>19211</label>
                    </control>

                    <!-- New channel button -->
                    <control type="button" id="33">
                        <width>690</width>
                        <include>Defs_OptionButton</include>
                        <label>19204</label>
                    </control>
                </control>
                <control type="group">
                    <left>1420</left>
                    <right>0</right>
                    <include>Object_FlatBackground</include>
                </control>
                <control type="grouplist" id="9100">
                    <left>1420</left>
                    <right>0</right>
                    <itemgap>0</itemgap>
                    <onleft>9000</onleft>
                    <usecontrolcoords>true</usecontrolcoords>
                    <!-- OK Button -->
                    <control type="button" id="4">
                        <width>100%</width>
                        <include>Defs_OptionButton</include>
                        <label>186</label>
                    </control>

                    <!-- Cancel Button -->
                    <control type="button" id="6">
                        <width>100%</width>
                        <include>Defs_OptionButton</include>
                        <label>222</label>
                    </control>

                    <!-- Apply changes Button -->
                    <control type="button" id="5">
                        <width>100%</width>
                        <include>Defs_OptionButton</include>
                        <label>14070</label>
                    </control>

                    <!-- TV/Radio Button -->
                    <control type="togglebutton" id="34">
                        <width>100%</width>
                        <include>Defs_OptionButton</include>
                        <label>19024</label>
                        <altlabel>19023</altlabel>
                        <usealttexture>!String.IsEmpty(Window.Property(IsRadio))</usealttexture>
                    </control>

                    <!-- Group Manager Button -->
                    <control type="button" id="30">
                        <width>100%</width>
                        <include>Defs_OptionButton</include>
                        <label>19205</label>
                    </control>

                    <!-- Icon -->
                    <control type="image" id="10">
                        <height>338</height>
                        <width>338</width>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[ListItem.Icon]</texture>
                        <bordersize>50</bordersize>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>