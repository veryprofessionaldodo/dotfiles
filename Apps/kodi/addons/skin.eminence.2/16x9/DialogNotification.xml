<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <control type="group">
            <visible>!Window.IsVisible(home) + !Window.IsVisible(weather)</visible>
            <visible>!Skin.HasSetting(videoosd.hidenotification) | !VideoPlayer.IsFullscreen</visible>
            <animation effect="slide" start="0,64" end="0" time="125">WindowOpen</animation>
            <animation effect="slide" end="0,64" start="0" time="125">WindowClose</animation>
            <control type="image">
                <left>0</left>
                <posy>64r</posy>
                <width>100%</width>
                <height>64</height>
                <aspectratio>scale</aspectratio>
                <texture colordiffuse="DialogBG">common/white.png</texture>
                <visible>Window.IsVisible(fullscreenvideo)</visible>
            </control>
            <control type="image">
                <posx>16</posx>
                <posy>48r</posy>
                <width>32</width>
                <height>32</height>
                <texture colordiffuse="LineLabel">common/info.png</texture>
            </control>
            <control type="label">
                <bottom>16</bottom>
                <left>48</left>
                <right>300</right>
                <height>32</height>
                <font>Font-RSS</font>
                <textcolor>LineLabel</textcolor>
                <scroll>true</scroll>
                <label>[COLOR=$VAR[HighlightColor2]]$INFO[Control.GetLabel(401),   ][/COLOR]$INFO[Control.GetLabel(402),   ,]</label>
                <visible>!Skin.HasSetting(furniture.showflags) | !Skin.HasSetting(furniture.flags.extradetail)</visible>
            </control>
            <control type="label">
                <bottom>16</bottom>
                <left>48</left>
                <right>960</right>
                <height>32</height>
                <font>Font-RSS</font>
                <textcolor>LineLabel</textcolor>
                <scroll>true</scroll>
                <label>[COLOR=$VAR[HighlightColor2]]$INFO[Control.GetLabel(401),   ][/COLOR]$INFO[Control.GetLabel(402),   ,]</label>
                <visible>Skin.HasSetting(furniture.showflags) + Skin.HasSetting(furniture.flags.extradetail)</visible>
            </control>
        </control>
        <control type="group">
            <visible>Window.IsActive(home) | Window.IsActive(weather)</visible>
            <bottom>266</bottom>
            <!-- <animation effect="slide" tween="quadratic" easing="in" time="200" end="0,266" start="0">Hidden</animation> -->
            <animation effect="slide" start="-1200" end="0" time="250">WindowOpen</animation>
            <animation effect="slide" end="-1200" start="0" time="250">WindowClose</animation>
            <animation effect="slide" end="0,160" condition="String.IsEqual(Skin.String(home.style),$LOCALIZE[31182])">Conditional</animation>
            <include condition="String.IsEqual(Skin.String(home.style),$LOCALIZE[31182])">Home_Dialogs_TextOnly_Animate</include>
            <include condition="!String.IsEqual(Skin.String(home.style),$LOCALIZE[31182])">Home_Dialogs_Icons_Animate</include>

            <control type="image">
                <left>16</left>
                <bottom>16</bottom>
                <width>32</width>
                <height>32</height>
                <texture colordiffuse="LineLabel">common/info.png</texture>
            </control>
            <control type="label">
                <bottom>16</bottom>
                <left>48</left>
                <width>1040</width>
                <height>32</height>
                <font>Font-RSS</font>
                <textcolor>LineLabel</textcolor>
                <scroll>false</scroll>
                <label>[COLOR=$VAR[HighlightColor2]]$INFO[Control.GetLabel(401),   ][/COLOR]$INFO[Control.GetLabel(402),   ,]</label>
            </control>
        </control>
        <control type="label" id="401"><visible>false</visible></control>
        <control type="label" id="402"><visible>false</visible></control>
    </controls>

</window>