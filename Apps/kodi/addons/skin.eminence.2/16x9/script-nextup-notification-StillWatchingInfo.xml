<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">4012</defaultcontrol>
    <zorder>20</zorder>
    <controls>
        <control type="label" id="4000"><visible>false</visible></control>
        <control type="group">
            <right>64</right>
            <bottom>64</bottom>
            <width>480</width>
            <height>270</height>
            <include>Animation_SlideIn</include>
            <include>Animation_FadeOut</include>
            <control type="label" description="text">
                <top>-64</top>
                <left>0</left>
                <right>20</right>
                <height>64</height>
                <aligny>center</aligny>
                <font>Font-ListInfo</font>
                <label>$ADDON[service.nextup.notification 30010]</label>
                <textcolor>ffededed</textcolor>
                <shadowcolor>bf000000</shadowcolor>
            </control>

            <control type="image" description="fanart">
                <width>100%</width>
                <height>100%</height>
                <fadetime>350</fadetime>
                <aspectratio scalediffuse="false">scale</aspectratio>
                <texture>$INFO[Player.Art(fanart)]</texture>
            </control>

            <control type="image" description="blackline">
                <width>100%</width>
                <height>64</height>
                <bottom>0</bottom>
                <aspectratio scalediffuse="false">scale</aspectratio>
                <texture colordiffuse="df000000">common/white.png</texture>
            </control>

            <control type="image" description="blackline">
                <height>64</height>
                <width>64</width>
                <centertop>110</centertop>
                <centerleft>50%</centerleft>
                <aspectratio scalediffuse="false">keep</aspectratio>
                <texture colordiffuse="df000000">common/circle.png</texture>
            </control>
            <control type="label">
                <description>Remaining</description>
                <centertop>110</centertop>
                <centerleft>50%</centerleft>
                <width>885</width>
                <font>Font-InfoBox-Title</font>
                <align>center</align>
                <textcolor>ffededed</textcolor>
                <label>$INFO[Player.TimeRemaining(ss)]</label>
            </control>


            <control type="label" description="text">
                <left>20</left>
                <right>120</right>
                <height>64</height>
                <bottom>0</bottom>
                <aligny>center</aligny>
                <font>Font-ListInfo-Small</font>
                <label>$INFO[Control.GetLabel(4000)]</label>
                <textcolor>Selected</textcolor>
            </control>

            <control type="button" id="4012">
                <description>Play</description>
                <right>64</right>
                <bottom>8</bottom>
                <width>48</width>
                <height>48</height>
                <label></label>
                <align>center</align>
                <aligny>center</aligny>
                <textoffsetx>0</textoffsetx>
                <onleft>4013</onleft>
                <onright>4013</onright>
                <font>Font-ListInfo-Small-Bold</font>
                <textcolor>ListLabel</textcolor>
                <focusedcolor>Selected</focusedcolor>
                <texturefocus colordiffuse="$VAR[HighlightColor]" border="5">common/white.png</texturefocus>
                <texturenofocus />
            </control>
            <control type="image">
                <description>Play</description>
                <right>72</right>
                <bottom>16</bottom>
                <width>32</width>
                <height>32</height>
                <texture>common/playwhite.png</texture>
                <aspectratio>keep</aspectratio>
                <animation effect="fade" start="100" end="50" time="0" condition="!Control.HasFocus(4012)">Conditional</animation>
            </control>
            <control type="button" id="4013">
                <description>Cancel</description>
                <right>8</right>
                <bottom>8</bottom>
                <width>48</width>
                <height>48</height>
                <label>X</label>
                <align>center</align>
                <aligny>center</aligny>
                <textoffsetx>0</textoffsetx>
                <onleft>4012</onleft>
                <onright>4012</onright>
                <font>Font-ListInfo-Small-Bold</font>
                <textcolor>ListLabel</textcolor>
                <focusedcolor>Selected</focusedcolor>
                <texturefocus colordiffuse="$VAR[HighlightColor]" border="5">common/white.png</texturefocus>
                <texturenofocus />
            </control>
        </control>
    </controls>
</window>