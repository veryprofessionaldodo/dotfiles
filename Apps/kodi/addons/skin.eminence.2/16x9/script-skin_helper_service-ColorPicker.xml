<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">9000</defaultcontrol>
    <controls>
        <control type="group">
            <include>Animation_SlideIn</include>
            <centerleft>50%</centerleft>
            <width>1134</width>
            <bottom>64</bottom>
            <height>504</height>
            <include>Dialog_Background</include>
            <include content="Dialog_Top_IconHeader">
                <param name="label" value="$ADDON[script.skin.helper.colorpicker 32011]" />
                <param name="icon" value="special://skin/extras/icons/filebox.png" />
            </include>
            <control type="panel" id="3110">
                <onup>9000</onup>
                <ondown>noop</ondown>
                <right>0</right>
                <left>bigpad</left>
                <top>80</top>
                <bottom>pad</bottom>
                <onleft>9000</onleft>
                <onright>9000</onright>
                <scrolltime>200</scrolltime>
                <orientation>vertical</orientation>
                <preloaditems>2</preloaditems>
                <itemlayout width="138" height="138">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <right>pad</right>
                        <bottom>pad</bottom>
                        <texture colordiffuse="PosterBorder">common/white.png</texture>
                    </control>
                    <control type="image">
                        <top>pad</top>
                        <left>pad</left>
                        <right>bigpad</right>
                        <bottom>bigpad</bottom>
                        <aspectratio>keep</aspectratio>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
                    </control>
                </itemlayout>
                <focusedlayout width="138" height="138">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <right>pad</right>
                        <bottom>pad</bottom>
                        <texture colordiffuse="$VAR[HighlightColor]">common/white.png</texture>
                    </control>
                    <control type="image">
                        <top>pad</top>
                        <left>pad</left>
                        <right>bigpad</right>
                        <bottom>bigpad</bottom>
                        <aspectratio>keep</aspectratio>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
                    </control>
                </focusedlayout>
            </control>
            <!-- Button grouplist -->
            <control type="grouplist" id="9000">
                <right>bigpad</right>
                <top>pad</top>
                <align>right</align>
                <height>60</height>
                <onleft>9000</onleft>
                <onright>9000</onright>
                <onup>3110</onup>
                <ondown>3110</ondown>
                <orientation>horizontal</orientation>
                <itemgap>pad</itemgap>
                <usecontrolcoords>true</usecontrolcoords>
                <!-- EDIT -->
                <control type="button" id="3010">
                    <width>400</width>
                    <height>100%</height>
                    <label>$ADDON[script.skin.helper.colorpicker 32012]$INFO[Window.Property(colorstring),  ,]</label>
                    <align>center</align>
                    <texturenofocus />
                    <texturefocus />
                    <focusedcolor>$VAR[HighlightColor]</focusedcolor>
                    <include>Defs_OptionButton</include>
                </control>
                <!-- SAVE -->
                <control type="button" id="3012">
                    <width>280</width>
                    <height>100%</height>
                    <label>190</label>
                    <align>right</align>
                    <texturenofocus />
                    <texturefocus />
                    <focusedcolor>$VAR[HighlightColor]</focusedcolor>
                    <include>Defs_OptionButton</include>
                </control>
                <control type="group">
                    <top>5</top>
                    <width>50</width>
                    <height>50</height>
                    <control type="image">
                        <width>100%</width>
                        <height>100%</height>
                        <texture colordiffuse="PosterBorder">common/white.png</texture>
                    </control>
                    <control type="image">
                        <top>pad</top>
                        <left>pad</left>
                        <right>pad</right>
                        <bottom>pad</bottom>
                        <texture colordiffuse="$INFO[Window.Property(colorstring)]">common/white.png</texture>
                    </control>
                </control>
            </control>
        </control>
        <control type="button" id="3011"><visible allowhiddenfocus="true">false</visible></control>
        <control type="group" id="3020">
            <control type="label" id="3016"><visible allowhiddenfocus="true">false</visible></control>
            <control type="slider" id="3015"><visible allowhiddenfocus="true">false</visible></control>
            <control type="label" id="3017"><visible allowhiddenfocus="true">false</visible></control>
        </control>
    </controls>
</window>
