<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window>
    <defaultcontrol always="true">11</defaultcontrol>

    <controls>

        <control type="group">
            <visible>!Window.IsActive(DialogPVRGuideInfo.xml)</visible>
            <animation effect="slide" start="-668" end="0" time="150" tween="quadratic">Visible</animation>
            <animation effect="slide" start="-668" end="0" time="150" tween="quadratic">WindowOpen</animation>
            <animation effect="slide" end="-668" start="0" time="150" tween="quadratic">Hidden</animation>
            <animation effect="slide" end="-668" start="0" time="150" tween="quadratic">WindowClose</animation>
            <control type="image">
                <left>-24</left>
                <top>-24</top>
                <bottom>-24</bottom>
                <width>720</width>
                <bordersize>24</bordersize>
                <bordertexture border="24">common/24-shadow.png</bordertexture>
                <texture border="5" colordiffuse="DialogBG">common/white.png</texture>
            </control>
            <control type="image">
                <left>530</left>
                <top>-4</top>
                <width>128</width>
                <height>128</height>
                <texture colordiffuse="ListLabel">special://skin/extras/icons/livetv.png</texture>
            </control>
            <control type="label">
                <left>30</left>
                <top>pad</top>
                <width>400</width>
                <height>70</height>
                <align>left</align>
                <font>Font-WidgetInfoTitle</font>
                <label>$INFO[VideoPlayer.ChannelGroup]</label>
            </control>
            <control type="label">
                <left>30</left>
                <top>50</top>
                <height>70</height>
                <width>400</width>
                <align>left</align>
                <font>Font-ListInfo-Bold</font>
                <label>$INFO[Container(11).NumItems,,  $LOCALIZE[19019]]</label>
            </control>

            <control type="list" id="11">
                <left>0</left>
                <top>120</top>
                <height>980</height>
                <width>670</width>
                <onleft>PreviousChannelGroup</onleft>
                <onright>NextChannelGroup</onright>
                <orientation>vertical</orientation>
                <itemlayout height="120" width="670">
                    <control type="image">
                        <width>100%</width>
                        <height>100%</height>
                        <texture colordiffuse="0fffffff">common/selected.png</texture>
                        <aspectratio>scale</aspectratio>
                        <visible>ListItem.IsPlaying</visible>
                    </control>
                    <control type="image">
                        <left>22</left>
                        <top>12</top>
                        <width>85</width>
                        <height>85</height>
                        <texture>$INFO[ListItem.Thumb]</texture>
                        <aspectratio>keep</aspectratio>
                    </control>
                    <control type="label">
                        <left>560</left>
                        <width>70</width>
                        <height>70</height>
                        <align>left</align>
                        <label>$INFO[ListItem.ChannelNumberLabel]</label>
                        <selectedcolor>ListLabel</selectedcolor>
                    </control>
                    <control type="progress">
                        <left>560</left>
                        <top>78</top>
                        <width>80</width>
                        <height>8</height>
                        <reveal>true</reveal>
                        <info>ListItem.Progress</info>
                        <lefttexture colordiffuse="ListLabel">osd/progress-end.png</lefttexture>
                        <midtexture colordiffuse="ListLabel">osd/progress-end.png</midtexture>
                    </control>
                    <control type="label">
                        <left>130</left>
                        <height>70</height>
                        <width>400</width>
                        <align>left</align>
                        <textcolor>ListLabel</textcolor>
                        <label>$INFO[ListItem.ChannelName]</label>
                        <selectedcolor>ListLabel</selectedcolor>
                    </control>
                    <control type="label">
                        <left>130</left>
                        <top>40</top>
                        <width>400</width>
                        <height>70</height>
                        <align>left</align>
                        <font>Font-ListInfo</font>
                        <textcolor>ListLabel</textcolor>
                        <label>$INFO[ListItem.Title]</label>
                        <selectedcolor>ListLabel</selectedcolor>
                    </control>
                </itemlayout>
                <focusedlayout height="120" width="670">
                    <control type="image">
                        <width>100%</width>
                        <height>109</height>
                        <texture colordiffuse="$VAR[HighlightColor]">common/white.png</texture>
                    </control>
                    <control type="image">
                        <width>100%</width>
                        <height>100%</height>
                        <texture colordiffuse="1fffffff">common/selected.png</texture>
                        <aspectratio>scale</aspectratio>
                        <visible>ListItem.IsPlaying</visible>
                    </control>
                    <control type="image">
                        <left>22</left>
                        <top>12</top>
                        <width>85</width>
                        <height>85</height>
                        <texture>$INFO[ListItem.Thumb]</texture>
                        <aspectratio>keep</aspectratio>
                    </control>
                    <control type="label">
                        <left>560</left>
                        <width>70</width>
                        <height>70</height>
                        <align>left</align>
                        <label>$INFO[ListItem.ChannelNumberLabel]</label>
                        <selectedcolor>Selected</selectedcolor>
                        <textcolor>Selected</textcolor>
                    </control>
                    <control type="progress">
                        <left>560</left>
                        <top>78</top>
                        <width>80</width>
                        <height>8</height>
                        <reveal>true</reveal>
                        <info>ListItem.Progress</info>
                        <lefttexture colordiffuse="Selected">osd/progress-end.png</lefttexture>
                        <midtexture colordiffuse="Selected">osd/progress-end.png</midtexture>
                    </control>
                    <control type="label">
                        <left>130</left>
                        <height>70</height>
                        <width>400</width>
                        <align>left</align>
                        <textcolor>Selected</textcolor>
                        <label>$INFO[ListItem.ChannelName]</label>
                        <selectedcolor>Selected</selectedcolor>
                    </control>
                    <control type="label">
                        <left>130</left>
                        <top>40</top>
                        <width>400</width>
                        <height>70</height>
                        <align>left</align>
                        <font>Font-ListInfo</font>
                        <textcolor>Selected</textcolor>
                        <label>$INFO[ListItem.Title]</label>
                        <selectedcolor>Selected</selectedcolor>
                    </control>
                </focusedlayout>

            </control>
        </control>
    </controls>

</window>
