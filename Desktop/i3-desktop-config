####################
# Desktop Specific #
####################

###### 
# i3 #
######

focus_follows_mouse yes

# Assigning workspaces to monitor
set $monitor_one "DisplayPort-1"
set $monitor_two "HDMI-A-1"

workspace $ws1 output $monitor_one
workspace $ws2 output $monitor_two
workspace $ws3 output $monitor_one
workspace $ws4 output $monitor_two
workspace $ws5 output $monitor_one
workspace $ws6 output $monitor_two

#####################
# Extra keybindings #
#####################

bindsym $mod4+F2 exec --no-startup-id $DOTFILES_DIR/Scripts/bashScripts/volume-control down 5
bindsym $mod4+F3 exec --no-startup-id $DOTFILES_DIR/Scripts/bashScripts/volume-control up 5
bindsym $mod4+F1 exec --no-startup-id $DOTFILES_DIR/Scripts/bashScripts/volume-control mute

bindsym $mod+Shift+Right move container to output $monitor_two; focus output $monitor_two
bindsym $mod+Shift+Left move container to output $monitor_one; focus output $monitor_one

bindsym $mod+Shift+p exec --no-startup-id polybar left; exec --no-startup-id polybar right
bindsym $mod+Shift+t exec --no-startup-id polybar left

bindsym $mod+Shift+x exec --no-startup-id $DOTFILES_DIR/Scripts/bashScripts/gaomon-general
bindsym $mod+Shift+c exec --no-startup-id $DOTFILES_DIR/Scripts/bashScripts/gaomon-2D
bindsym $mod+Shift+z exec --no-startup-id $DOTFILES_DIR/Scripts/bashScripts/gaomon-3D

bindsym $mod+Shift+w exec --no-startup-id $DOTFILES_DIR/Scripts/bashScripts/dual-monitor-setup
bindsym $mod+Shift+g exec --no-startup-id $DOTFILES_DIR/Scripts/bashScripts/single-monitor-setup 

# Toggle refresh rates
bindsym $mod+Shift+h exec --no-startup-id python $DOTFILES_DIR/Scripts/pythonScripts/toggle-monitor-rate.py


###################
# Extra autostart #
###################

# Set primary monitor and polybars
exec --no-startup-id $DOTFILES_DIR/Scripts/bashScripts/dual-monitor-setup

# No mismatch between Windows and Linux time
exec --no-startup-id timedatectl set-local-rtc 1 --adjust-system-clock
