# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod1
set $mod4 Mod4

exec --no-startup-id python $DOTFILES_DIR/Scripts/pythonScripts/wallpaperAndColorScheme.py

# set default desktop layout (default is tiling)
# workspace_layout tabbed <stacking|tabbed>

# Configure border style <normal|1pixel|pixel xx|none|pixel>
new_window pixel 3
new_float pixel 3

# Hide borders
hide_edge_borders none

# Polybar
bindsym $mod+Shift+k exec --no-startup-id killall -q polybar

bindsym $mod+Shift+f exec --no-startup-id python $DOTFILES_DIR/Scripts/pythonScripts/wallpaperAndColorScheme.py

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font xft:URWGothic-Book 11

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# start a terminal
bindsym $mod+Shift+Return exec urxvt -e fish

# kill focused window
bindsym $mod+Shift+q kill

# Color palette used for the terminal ( $HOME/.Xresources file )
# Colors are gathered based on the documentation:
# https://i3wm.org/docs/userguide.html#xresources
# Change the variable name at the place you want to match the color
# of your terminal like this:
# [example]
# If you want your bar to have the same background color as your 
# terminal background change the line 362 from:
# background #14191D
# to:
# background $term_background
# Same logic applied to everything else.

set_from_resource $inactive-bg-color  inactive
set_from_resource $fg foreground
set_from_resource $bg color0
set_from_resource $bg_act color0
set_from_resource $border_act color2

set $text_inac #999999
set $text_ac #FFFFFF


# class                 border    backgr.   text       indicator  child_border
client.focused          $fg       $bg_act   $text_ac   $text_ac   $border_act
client.focused_inactive $bg       $bg       $text_inac $bg        $bg
client.unfocused        $bg       $bg       $text_inac $bg        $bg
client.urgent           $fg       $bg       $text_ac   $fg        $border_act
client.placeholder      $bg       $bg       $text_inac $bg        $bg

client.background       $bg

# start program launcher
bindsym $mod+d exec --no-startup-id rofi -show drun -lines 5 -eh 2 -width 50 -padding 7 -bw 0 -theme "~/.cache/wal/rofi.rasi"
bindsym $mod+Shift+d exec --no-startup-id rofi -show run -lines 5 -eh 2 -width 50 -padding 7 -bw 0 -theme "~/.cache/wal/rofi.rasi"


